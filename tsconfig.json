{
	"compilerOptions": {
		"target": "es2019",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		// "module": "CommonJS",
		"declaration": false, // ncc to set false
		"types": [
			"node",
			"tw5-typed"
		]
	},
	"exclude": [
		"node_modules/",
		"dist"
	],
	"ts-node": {
		"files": true,
		// Do not forget to `npm i -D tsconfig-paths`
		"require": [
			"tsconfig-paths/register"
		]
	},
}